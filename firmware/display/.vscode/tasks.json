    "version": "2.0.0",
    "tasks": [
        {
            "label": "build DISPLAY_OLED_1.3_SPI",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make default DISPLAY_OLED_1.3_SPI=1"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
          "label": "OpenOCD JLink",
          "type": "shell",
          "args": [],
          "linux": {
              "command": "openocd -c 'interface jlink; transport select swd; source [find target/nrf52.cfg]'"
          },
          "problemMatcher": []
        },
        {
          "label": "OpenOCD ST-LINK",
          "type": "shell",
          "args": [],
          "linux": {
              "command": "openocd",
              "args": [
                  "-f",
                  "${workspaceFolder}/../../common_firmware/tools/openocd-scripts/stlink.cfg",
                  "-f",
                  "${workspaceFolder}/../../common_firmware/tools/openocd-scripts/nrf52.cfg"
              ]
          },
            "problemMatcher": []
        }
    ]
